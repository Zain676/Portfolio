<%- include('../partials/header', { title }) %>
<main class="flex-grow">
  <section class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">Contact Me</h1>
    <p class="mb-8 text-lg">
      Feel free to reach out for freelance work, collaborations, or just a chat
      over coffee!
    </p>
    <form action="#" method="POST" class="space-y-6">
      <input
        type="text"
        placeholder="Your Name"
        class="w-full border border-gray-300 px-4 py-2 rounded-lg"
        required
      />
      <input
        type="email"
        placeholder="Your Email"
        class="w-full border border-gray-300 px-4 py-2 rounded-lg"
        required
      />
      <textarea
        rows="6"
        placeholder="Your Message"
        class="w-full border border-gray-300 px-4 py-2 rounded-lg"
        required
      ></textarea>
      <button
        type="submit"
        class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700"
      >
        Send Message
      </button>
    </form>
    <div class="mt-12">
      <p class="text-gray-600">Email: contact@mzportfolio.com</p>
      <p class="text-gray-600">Phone: +92-300-1234567</p>
      <p class="text-gray-600">Location: Peshawar, Pakistan</p>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
