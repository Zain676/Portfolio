<%- include('../partials/header', { title }) %>

<main class="flex-grow">
  <section class="max-w-4xl mx-auto px-4 py-24">
    <h1 class="text-4xl font-bold mb-8">Contact Me</h1>
    <p class="mb-8 text-lg">
      Feel free to reach out for freelance work, collaborations, or just a chat
      over coffee!
    </p>

    <% if (success.length > 0) { %>
    <div class="bg-green-100 text-green-700 px-4 py-3 rounded mb-6">
      <%= success[0] %>
    </div>
    <% } %>

    <form action="/contact" method="POST" class="space-y-6">
      <input
        type="text"
        name="name"
        placeholder="Your Name"
        class="w-full border border-gray-300 px-4 py-2 rounded-lg"
        required
      />
      <input
        type="email"
        name="email"
        placeholder="Your Email"
        class="w-full border border-gray-300 px-4 py-2 rounded-lg"
        required
      />
      <textarea
        name="message"
        rows="6"
        placeholder="Your Message"
        class="w-full border border-gray-300 px-4 py-2 rounded-lg"
        required
      ></textarea>
      <button
        type="submit"
        class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700"
      >
        Send Message
      </button>
    </form>

    <div class="mt-12 text-gray-600 space-y-2">
      <p>Email: mzaindev9@gmail.com</p>
      <p>Phone: +92-333-4042712</p>
      <p>Location: Peshawar, Pakistan</p>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
